{
  "name": "@yourname/bitrix-sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for Bitrix24 REST API with OAuth2 support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "example:cli": "tsx examples/cli-app.ts",
    "example:web": "tsx examples/web-app.ts",
    "example:cli:dev": "ts-node --esm examples/cli-app.ts",
    "example:web:dev": "ts-node --esm examples/web-app.ts"
