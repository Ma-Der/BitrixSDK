  "keywords": [
    "bitrix24",
    "bitrix",
    "crm",
    "oauth2",
    "typescript",
    "api",
    "sdk"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/bitrix-sdk"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "node-fetch": "^3.3.2",
    "open": "^10.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/open": "^6.2.1",
    "express": "^4.18.0",
    "jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "tsx": "^4.19.4",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "express": "^4.18.0"
